box::use(
  shiny[bootstrapPage, moduleServer, NS,reactive,bindCache],
)

box::use(
  app/logic/get_data[load_data],
  app/view/plot,

)

#' @export
ui <- function(id) {
  ns <- NS(id)
  bootstrapPage(
    plot$ui(ns("plot"))
  )
}

#' @export
server <- function(id) {
  moduleServer(id, function(input, output, session) {
    df <- reactive(load_data()) 
    
    plot$server("plot", df)
  })
}
